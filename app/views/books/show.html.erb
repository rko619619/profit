<div class="container">
  <article class="book">
    <section class="book-head">
      <h2><%=@book.name%></h2>
      <h4><%=@book.author%></h4>
      <i><h6><%=@book.category.name%></h6></i>
    </section>
    <section>
      <div class="row">
        <div class="col-md-auto">
          <%= image_tag @book.image, class: "img-show" %>
        </div>
        <div class="col-md-auto">
          <strong>Автор:</strong> <i><%=@book.author%></i>
          <br>
          <strong>Название:</strong> <i><%=@book.name%></i>
          <br>
          <strong>Издательство:</strong> <i><%=@book.house%></i>
          <br>
          <strong>ISBN:</strong> <i><%=@book.isbn%></i>
          <br>
          <strong>Страниц:</strong> <i><%=@book.pages%></i>
          <br>
          <strong>Тираж:</strong> <i><%=@book.circulation%></i>
          <br>
          <strong>Размер:</strong> <i><%=@book.size%></i>
          <br>
          <strong>Язык:</strong> <i><%=@book.language%></i>
        </div>
      </div>
      <%= @book.description %>
    </section>
  </article>
</div>


